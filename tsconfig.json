{
  "extends": "./tsconfig.build.json",
  "include": [
    "packages",
    "scripts",
    "types",
    "jest",
    "@testing-library/jest-dom",
    "@testing-library/jest-dom/jest-globals"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types", "@testing-library/jest-dom/jest-globals"],
    "resolveJsonModule": true,
    "paths": {
      "~/sb-decorators": [".storybook/decorators"],
      "@magicbell/cli": ["packages/cli/src"],
      "@magicbell/codegen": ["packages/codegen/src"],
      "@magicbell/core": ["packages/core/src"],
      "@magicbell/embeddable": ["packages/embeddable/src"],
      "@magicbell/in-app": ["packages/in-app/src"],
      "@magicbell/magicbell-react": ["packages/react/src"],
      "@magicbell/react-headless": ["packages/react-headless/src"],
      "@magicbell/user-client": ["packages/user-client/src"],
      "@magicbell/utils": ["packages/utils/src"],
      "@magicbell/webpush": ["packages/webpush/src"],
      "magicbell": ["packages/magicbell/src"],
      "playground": ["packages/playground/src"]
    }
  }
}
