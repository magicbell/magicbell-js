{
  "include": [
    "packages",
    "scripts",
    "types",
    "./jest.setup.ts",
    "@testing-library/jest-dom",
    "@testing-library/jest-dom/jest-globals"
  ],
  "exclude": ["node_modules", "packages/*/dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "resolveJsonModule": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "allowJs": false,

    "paths": {
      "~/sb-decorators": [".storybook/decorators"],
      "@magicbell/cli": ["packages/cli/src"],
      "@magicbell/codegen": ["packages/codegen/src"],
      "@magicbell/core": ["packages/core/src"],
      "@magicbell/embeddable": ["packages/embeddable/src"],
      "@magicbell/magicbell-react": ["packages/react/src"],
      "@magicbell/react-headless": ["packages/react-headless/src"],
      "@magicbell/user-client": ["packages/user-client/src"],
      "@magicbell/utils": ["packages/utils/src"],
      "@magicbell/webpush": ["packages/webpush/src"],
      "magicbell": ["packages/magicbell/src"],
      "playground": ["packages/playground/src"]
    }
  }
}
