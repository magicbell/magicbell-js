{
  "name": "magicbell-root",
  "private": true,
  "version": "0.0.0",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Stephan Meijer",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "clean": "manypkg exec yarn clean",
    "start": "turbo run start --parallel --no-cache --filter=!playground",
    "start:example": "yarn --cwd example && yarn --cwd example start",
    "start:storybook": "cross-env NODE_OPTIONS=--openssl-legacy-provider start-storybook -p 6006",
    "start:playground": "yarn --cwd packages/playground start",
    "codegen": "turbo run codegen --parallel --no-cache",
    "build": "turbo run build",
    "build:example": "yarn --cwd example && yarn --cwd example build",
    "build:storybook": "build-storybook",
    "lint": "run-s lint:*",
    "lint:typescript": "tsc --noEmit",
    "lint:eslint": "eslint --fix .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand --ci --coverage",
    "postinstall": "husky && node scripts/sync-paths.js && manypkg check && link-workspaces --no-source",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:release": "yarn build && changeset publish",
    "console": "ts-node"
  },
  "lint-staged": {
    "*.{md,json,yml,yaml}": [
      "prettier -w"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.23.5",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@manypkg/cli": "^0.21.1",
    "@size-limit/preset-small-lib": "^8.2.6",
    "@storybook/addon-essentials": "^8.2.1",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^8.2.1",
    "@storybook/addons": "^7.6.17",
    "@storybook/builder-vite": "^8.2.1",
    "@storybook/react": "^8.2.1",
    "@testing-library/cypress": "^10.0.2",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@tsconfig/create-react-app": "^2.0.5",
    "@types/jest": "^29.5.10",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitejs/plugin-react": "^4.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "happy-dom": "^14.12.0",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "link-workspaces": "^1.1.0",
    "lint-staged": "^15.2.4",
    "msw": "^1.3.2",
    "npm-run-all2": "^6.2.0",
    "prettier": "^2.8.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^5.0.7",
    "rollup-plugin-analyzer": "^4.0.0",
    "size-limit": "^8.2.6",
    "sort-package-json": "^2.10.0",
    "tiny-glob": "^0.2.9",
    "ts-jest": "^29.2.0",
    "tslib": "^2.6.2",
    "tsx": "^4.6.2",
    "turbo": "^1.13.0",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-plugin-banner": "^0.7.1",
    "zx": "^8.1.2"
  }
}
